<h1>댓글</h1>
제목 : <%= @post.title %>
내용 : <%= @post.content %>

<a href="post/edit/<%= @post.id%>">수정</a>
<a href="post/delete/<%= @post.id%>">삭제</a>

<hr>
<form action='/comment'>
  내용:<br>
  <input type="text" name="comment_content">
  <input type='hidden' name='post_id' value=<%= @post.id %>>
  
  <input type='submit'>
</form>

<% @comment.each do |x| %>
    <hr>
    <%= x.content %>
    <a href="comment/delete/<%= x.id%>">삭제</a>
    <br>
<% end %>
